<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <DebugType>portable</DebugType>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="lib\SDL2\SDL2.dll" TargetPath="\%(RecursiveDir)\%(Filename)%(Extension)">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Evergine.Bindings.Vulkan" Version="2022.1.28.12" />
    <PackageReference Include="Silk.NET.Vulkan" Version="2.13.0" />
    <PackageReference Include="Silk.NET.Vulkan.Extensions.EXT" Version="2.13.0" />
    <PackageReference Include="Silk.NET.Vulkan.Extensions.KHR" Version="2.13.0" />
    <PackageReference Include="StbImageSharp" Version="2.27.8" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="textures\" />
  </ItemGroup>
</Project>
